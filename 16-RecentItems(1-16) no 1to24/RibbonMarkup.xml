  <Application.Views>
    <Ribbon>

      <Ribbon.Tabs>
        <Tab CommandName="Tab1">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group="Group_New" Size="Large"/>
                <Scale Group="Group_Tools" Size="Large"/>
                <Scale Group="Group_Window" Size="Large"/>
                <Scale Group="Group_Else" Size="Large"/>
              </ScalingPolicy.IdealSizes>
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName="Group_New" SizeDefinition="TwoButtons">
            <Button CommandName='cmdButtonNew' />
            <Button CommandName='cmdPrint' />
          </Group>
          <Group CommandName="Group_Tools" SizeDefinition="SevenButtons">
            <ToggleButton CommandName="Tools_norPaint"/>
            <ToggleButton CommandName="Tools_Paint"/>
            <ToggleButton CommandName="Tools_Eraser"/>
            <ToggleButton CommandName="Tools_Dimmer"/>
            <ToggleButton CommandName="Tools_Text"/>
            <ToggleButton CommandName="Openshut_Mode"/>
            <Button CommandName="Fill"/>
          </Group>
          <Group CommandName="Group_Window" SizeDefinition="FourButtons">
            <Button CommandName="Window_Keycolor"/>
            <Button CommandName="Window_Preview"/>
            <ToggleButton CommandName="Show_black"/>
            <ToggleButton CommandName="Show_gray"/>
          </Group>
          <Group CommandName="Group_Else" SizeDefinition="ThreeButtons">
            <Button CommandName='Import' />
            <Button CommandName='Export' />
            <Button CommandName="About"/>
          </Group>
        </Tab>
       
      </Ribbon.Tabs>
      
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar>
          <QuickAccessToolbar.ApplicationDefaults>
            <Button CommandName='cmdButtonNew' />
            <Button CommandName='cmdButtonOpen' />
            <Button CommandName='cmdButtonSaveAs' />
            <Button CommandName='cmdPrint' />
          </QuickAccessToolbar.ApplicationDefaults>
        </QuickAccessToolbar>
      </Ribbon.QuickAccessToolbar>
      
      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="cmdApplicationMenu">
          <MenuGroup>
            <Button CommandName='cmdButtonNew' />
            <Button CommandName='cmdButtonOpen' />
            <Button CommandName='cmdButtonSaveAs' />
            <Button CommandName='cmdButtonSave' />
            <Button CommandName='cmdPrint' />
            <Button CommandName='Import' />
            <Button CommandName='Export' />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName='cmdButtonExit' />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>
